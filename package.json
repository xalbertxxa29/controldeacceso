{
  "name": "controldeacceso",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "vite build && electron .",
    "electron:dist": "vite build && electron-builder"
  },
  "dependencies": {
    "chart.js": "^4.5.1",
    "firebase": "^10.7.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^40.4.0",
    "electron-builder": "^26.7.0",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.liderman.controlacceso",
    "productName": "LiderControl-Acceso",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "imagenes/logo.ico",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "files": [
      "dist/**/*",
      "electron/main.cjs",
      "package.json"
    ],
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}